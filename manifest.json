{
  "manifest_version": 2,
  "name": "yt-anti-clickbait",
  "version": "0.1",
  "description": "Lorem ipsum dolor sit amet, consectetur adipiscing elit",
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "js/youtube.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png"
    },
    "default_title": "yt-anti-clickbait",
    "default_popup": "options_popup.html"
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "permissions": [
    "*://www.youtube.com/*",
    "*://i.ytimg.com/*",
    "webRequest",
    "storage",
    "webRequestBlocking",
    "tabs"
  ]
}
